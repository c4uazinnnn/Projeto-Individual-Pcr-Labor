    // Baixar dados
    async function baixarDados() {
      try {
        mostrarToast('ğŸ“„ Preparando download dos seus dados...', 'info');

        const response = await fetch('/api/perfil/exportar-dados');
        const result = await response.json();

        if (result.success) {
