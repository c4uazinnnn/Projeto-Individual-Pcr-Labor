        <button id="filtroMercadoLivre" class="btn btn-secondary" onclick="filtrarPlataforma('mercadolivre')">ğŸŸ¡ Mercado Livre</button>
        <button id="filtroPCRLabor" class="btn btn-secondary" onclick="filtrarPlataforma('pcrlabor')">ğŸŸ¢ PCR Labor</button>

        <!-- AÃ§Ãµes -->
        <button class="btn btn-secondary" onclick="abrirFiltroAvancado()">ğŸ” Filtros</button>
